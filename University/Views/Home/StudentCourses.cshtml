@model IEnumerable<University.PresentationLayer.ViewModels.StudentCourseReportViewModel>

@{
    ViewData["Title"] = "Report";
}

<h1>Report</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Student Name
            </th>
            <th>
                Course Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Student)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course)
                </td>
            </tr>
        }
    </tbody>
</table>
